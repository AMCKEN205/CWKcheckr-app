<html lang="en">
    {{>header}}
    <body>
        <div class="container">
            {{>page-header}}
        </div>
        <div class="container">
            <div class="jumbotron"style="background-color: :#7D7D7D;">
                <h2 style="background-color:#2E2E2E; color:white;" font-family:'Red Hat Display', sans serif;">Complete Coursework</h2>
                {{#Complete Coursework}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Coursework Name</th>
                                <th scope="col">Module Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Milestones</th>
                                <th scope="col">Due Date</th>
                                <th scope="col">Completion Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>{{Name}}</td>
                                <td>{{Course}}</td>
                                <td width="200">{{Description}}</td>
                                <td>
                                    <ul>
                                        {{#Milestones}}
                                            <li>
                                                {{Name}}
                                                {{#Check}}
                                                    <div>
                                                        <img src="../Resources/check-square.svg" id="checkImg"/>
                                                    <div>
                                                {{/Check}}
                                                {{^Check}}
                                                    <div>
                                                        <img src="../Resources/square.svg" id="checkImg"/>
                                                    <div>
                                                {{/Check}}
                                            </li>
                                        {{/Milestones}}
                                    </ul>
                                </td>
                                <td>{{Due Date}}</td>
                                <td>{{Completion Date}}</td>
                            </tr>
                        </tbody>
                    </table>
                {{/Complete Coursework}}
                {{^Complete Coursework}}
                    <div class="jumbotron" style="background-color:#C4C4C4;">
                        <h3 style="font-family:'Red Hat Display', sans serif;">No Items to show.</h3>
                    </div>
                {{/Complete Coursework}}
            </div>
        </div>
        <div class="container">
            <div class="jumbotron"style="background-color: :#7D7D7D;">
                <h2 style="background-color:#2E2E2E; color:white; font-family:'Red Hat Display', sans serif;">Incomplete Coursework</h2>
                {{#Incomplete Coursework}}
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">Coursework Name</th>
                                <th scope="col">Module Name</th>
                                <th scope="col">Description</th>
                                <th scope="col">Milestones</th>
                                <th scope="col">Due Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td style="color:red;">{{Name}}</td>
                                <td style="color:red;">{{Course}}</td>
                                <td width="200">{{Description}}</td>
                                <td>
                                    <ul>
                                        {{#Milestones}}
                                            <li>
                                                {{Name}}
                                                {{#Check}}
                                                    <div>
                                                        <img src="check-square.svg" id="checkImg"/>
                                                    <div>
                                                {{/Check}}
                                                {{^Check}}
                                                    <div>
                                                        <img src="square.svg" id="checkImg"/>
                                                    <div>
                                                {{/Check}}
                                            </li>
                                        {{/Milestones}}
                                    </ul>
                                </td>
                                <td>{{Due Date}}</td>
                            </tr>
                        </tbody>
                    </table>
                {{/Incomplete Coursework}}
                {{^Incomplete Coursework}}
                    <div class="jumbotron" style="background-color:#C4C4C4;">
                        <h3 style="font-family:'Red Hat Display', sans serif;">No Items to show.</h3>
                    </div>
                {{/Incomplete Coursework}}
            </div>
        </div>
    </body>
</html>
